<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- We'll toggle visibility of these groups based on image count in adapter -->

    <!-- 1 image: keep aspect ratio -->
    <ImageView
        android:id="@+id/ivOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <!-- 2 images: side by side -->
    <LinearLayout
        android:id="@+id/groupTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/ivTwoLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/ivTwoRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <!-- 3 images: 1 large left, 2 stacked right -->
    <LinearLayout
        android:id="@+id/groupThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/ivThreeLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivThreeTopRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp" />
            <ImageView
                android:id="@+id/ivThreeBottomRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>

    <!-- 4+ images: 2x2 grid, bottom-right has overlay when more than 4 -->
    <LinearLayout
        android:id="@+id/groupFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivFourTopLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/ivFourTopRight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivFourBottomLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent" />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ivFourBottomRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />
                <View
                    android:id="@+id/overlayMore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66FFFFFF"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/tvMoreCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="+3"
                    android:visibility="gone"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>


