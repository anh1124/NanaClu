<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Quay lại"
                android:textColor="#1976D2"
                android:background="@android:color/transparent"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chi tiết báo cáo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:gravity="center" />

        </LinearLayout>

        <!-- Report Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Reason -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lý do báo cáo"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lý do báo cáo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginBottom="12dp" />

                <!-- Reason Detail -->
                <TextView
                    android:id="@+id/tvReasonDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết lý do"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:background="#F5F5F5"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone" />

                <!-- Post ID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvPostId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Post ID: abc123"
                        android:textSize="14sp"
                        android:textColor="#666" />

                    <Button
                        android:id="@+id/btnViewPost"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Xem bài đăng"
                        android:textSize="12sp"
                        android:textColor="#1976D2"
                        android:background="@drawable/bg_button_outline"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp" />

                </LinearLayout>

                <!-- Reported User -->
                <TextView
                    android:id="@+id/tvReportedUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User bị báo cáo: user123"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginBottom="8dp" />

                <!-- Reporter -->
                <TextView
                    android:id="@+id/tvReporter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Người báo cáo: user456"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginBottom="8dp" />

                <!-- Timestamp -->
                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thời gian: 01/01/2024 10:30"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginBottom="8dp" />

                <!-- Status -->
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái: Chờ xử lý"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_marginBottom="8dp" />

                <!-- Moderator Note -->
                <TextView
                    android:id="@+id/tvModeratorNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ghi chú: Đã xem xét"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Action -->
                <TextView
                    android:id="@+id/tvAction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hành động: Xóa bài đăng"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Section (only for pending reports) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xử lý báo cáo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginBottom="12dp" />

                <!-- Moderator Note Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ghi chú (tùy chọn):"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etModeratorNote"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_edittext"
                    android:padding="12dp"
                    android:hint="Nhập ghi chú về việc xử lý..."
                    android:gravity="top|start"
                    android:maxLines="3"
                    android:scrollbars="vertical"
                    android:layout_marginBottom="16dp" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnDismiss"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Bỏ qua báo cáo"
                        android:textColor="#666"
                        android:background="@drawable/bg_button_outline"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnKickUser"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Kick user"
                        android:textColor="#FF9800"
                        android:background="@drawable/bg_button_warning"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnRemovePost"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Xóa bài đăng"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_button_danger" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
